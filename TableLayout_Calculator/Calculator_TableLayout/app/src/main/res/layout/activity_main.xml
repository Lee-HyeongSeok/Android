<?xml version="1.0" encoding="utf-8"?>
<TableLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_weight="2"
    >
    <TableRow>
        <EditText
            android:id="@+id/editor1"
            android:layout_span="4"
            android:hint="숫자 1 버튼입력"
            />
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/editor2"
            android:layout_span="4"
            android:hint="숫자 2 버튼 입력"
            />
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/Btn1"
            android:text="1"/>
        <Button
            android:id="@+id/Btn2"
            android:text="2"/>
        <Button
            android:id="@+id/Btn3"
            android:text="3"/>
        <Button
            android:id="@+id/Btn4"
            android:text="4"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/Btn5"
            android:text="5"/>
        <Button
            android:id="@+id/Btn6"
            android:text="6"/>
        <Button
            android:id="@+id/Btn7"
            android:text="7"/>
        <Button
            android:id="@+id/Btn8"
            android:text="8"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/Btn9"
            android:text="9"
            android:layout_span="2"
            />
        <Button
            android:id="@+id/Btn0"
            android:text="0"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/plus"
            android:text="더하기"
            android:background="#FF8844"
            android:layout_span="2"
            />
        <Button
            android:id="@+id/minus"
            android:text="빼기"
            android:background="#FF0088"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/multi"
            android:text="곱하기"
            android:background="#22FF55"
            android:layout_span="2"/>
        <Button
            android:id="@+id/divide"
            android:text="나누기"
            android:background="#2288FF"
            android:layout_span="2"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/result"
            android:layout_margin="5dp"
            android:layout_span="5"
            android:text="계산 결과 : "
            />
    </TableRow>
</TableLayout>